<h2>Search Authors</h2>

<form action="/authors" method="GET">
    <div class="input-field">
        <label for="all_authors">Name</label>
        <input type="text" name="name" id="all_authors" value="<%= searchOptions.name %>">
    </div>
    <div class="buttons">
        <button type="submit">Search</button>
    </div>
</form>

<br>

<% authors.forEach((author)=> { %>
    <div>
        <%= author.name %>
    </div>
<% }); %>